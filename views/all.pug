extends layout

block layout-content


    table.table.table-bordered.table-striped.m-2
        thead
            tr
                th(scope='col') #
                th(scope='col') Name
                th(scope='col') Code
                th(scope='col') Price
                th(scope='col') Quantity
                th(scope='col') View
                th(scope='col') Edit
        tbody
            each product in products
                tr
                    th(scope='row') 
                        = product.id
                    td 
                        = product.name
                    td 
                        = product.code
                    td 
                        = product.price
                    td 
                        = product.quantity
                    td 
                        a(href=`/product/${product.code}`)
                            button.m-2.btn.btn-sm.btn-success(type="link") View Product
                    td 
                        a(href=`/edit-product/${product.code}`)
                            button.m-2.btn.btn-sm.btn-info(type="link") Edit Product
                       
           
